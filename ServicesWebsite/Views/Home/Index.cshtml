@model ServicesWebsite.ViewModels.HomeScreenViewModel
@{
    ViewBag.Title = "Home - " + Constants.WEBSITE_NAME;
    int serviceSplitter = Model.Services.Count != 0 ? ((Model.Services.Count % 2 != 0) ? Model.Services.Count - 1 : 0) : 0;

    int productsSplitter = Model.Products.Count != 0 ? ((Model.Products.Count % 2 != 0) ? Model.Products.Count - 1 : 0) : 0;
}

<div>

    @*==============================================Show Stoppers========================================================*@
    <section id="show-stopper">
        <div id="myCarousel" class="carousel" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
             

                <div class="item active">
                    <img src="~/Content/Images/IMAGE_1.png" />

                </div>

                <div class="item">
                    <img src="~/Content/Images/IMAGE_2.png" />
                  
                </div>

              

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>


    @*==============================================Goals========================================================*@
    <section id="goals">
        <div class="container goals">
            <p>"Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."</p>
        </div>
    </section>

    @*==============================================Vision========================================================*@
    <section id="vision">
        <h2>Our Vision</h2>
        <div class="container vision">
            <p>"Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."</p>
        </div>
    </section>

    @*==============================================Services========================================================*@
    <section id="services">
        <h2>Our Services</h2>
        <div class="container">
            @*==========================================================Row 1=====================================================*@

            <div class="row">
                @for (int i = 0; i < Model.Services.Count; i++)
                {
                    if ((i == 0 && Model.Services.Count == 1) || (serviceSplitter != 0 && i == serviceSplitter))
                    {
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body" style="background-color:@(Model.Services[i].BackColor)">
                                    <h4><a href="@Url.Action("Index","Services")">@(Model.Services[i].Header)</a></h4>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body" style="background-color:@(Model.Services[i].BackColor)">
                                    <h4><a href="@Url.Action("Index","Services")">@(Model.Services[i].Header)</a></h4>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
           
        </div>
    </section>

    @*==============================================Products========================================================*@
    <section id="products">
        <h2>Our Products</h2>
        <div class="container">
            @*==========================================================Row 1=====================================================*@
            <div class="row">
                @for (int i = 0; i < Model.Products.Count; i++)
                {
                    if ((i == 0 && Model.Products.Count == 1) || (productsSplitter != 0 && i == productsSplitter))
                    {
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body" style="background-color:@(Model.Products[i].BackColor)">
                                    <h4><a href="@Url.Action("Index","Products")">@(Model.Products[i].Header)</a></h4>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body" style="background-color:@(Model.Products[i].BackColor)">
                                    <h4><a href="@Url.Action("Index","Products")">@(Model.Products[i].Header)</a></h4>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>

    <br />

    @*==============================================Testimonials========================================================*@
    <section id="client-logos-section">
        <div class="container">
            <h2>Our Clients</h2>
            <section class="customer-logos slider">
                @foreach (var item in Model.ClientLogos)
                {
                    <div class="slide"><img src="@(Constants.IMAGE_FOLDER_URL)ClientLogos/@(item.Image)" /></div>
                }
            </section>
        </div>
    </section>

    @*==============================================Testimonials========================================================*@
    <section id="testimonials"></section>

    @*==============================================NewLetter Subscription========================================================*@
    <section id="newsletter-subscription"></section>

</div>


<script type="text/javascript">

    $(document).ready()
    {
        $('.carousel').carousel({
            interval: false
        });
    }

    //client logo script
    $(document).ready(function () {
        $('.customer-logos').slick({
            slidesToShow: 4,
            slidesToScroll: 1,
            autoplay: true,
            autoplaySpeed: 0,
            speed:2000,
            cssEase: 'linear',
            infinite: true,
            arrows: false,
            dots: false,
            pauseOnHover: false,
            responsive: [{
                breakpoint: 768,
                settings: {
                    slidesToShow: 3
                }
            }, {
                breakpoint: 520,
                settings: {
                    slidesToShow: 2
                }
            }]
        });
    });

</script>


