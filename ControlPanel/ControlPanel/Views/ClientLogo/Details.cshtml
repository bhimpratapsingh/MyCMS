@model ControlPanel.ViewModels.ClientLogoViewModel

@{ 
    int i = 1;
    ViewBag.Title = "Client Log";
    ViewBag.Screen = "Client Logo Details" ;
}



@if (TempData["Message"] != null)
{
    <script type="text/javascript">notifyMessage("@TempData["Message"]");</script>
}
@if (TempData["ErrorMessage"] != null)
{
    <script type="text/javascript">notifyError("@TempData["ErrorMessage"]");</script>
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.Screen</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.LabelFor(x => x.Name)
                                </div>
                                <div class="col-md-6">
                                    @Html.DisplayFor(x => x.Name)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.LabelFor(x => x.SortOrder)
                                </div>
                                <div class="col-md-6">
                                    @Html.DisplayFor(x => x.SortOrder)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.Label("Made Public")
                                </div>
                                <div class="col-md-6">
                                    @(Model.MakePublic == true ? "Yes" : "No")
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.LabelFor(x => x.ImageFile)
                                </div>
                                <div class="col-md-6">
                                    @if (!string.IsNullOrEmpty(Model.Image))
                                    {
                                        @(Model.Image.Split(new[] { '_' }, 2)[1])
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <img class="img-responsive" id="ImageViewer" src="~/All_Images/ClientLogos/@Model.Image" style="border: solid;height: 200px" alt="image" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="button" class="btn btn-warning" onclick="history.go(-1);">Cancel</button>
            </div>
        </div>
    </div>
</div>
